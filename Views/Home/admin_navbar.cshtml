@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .logout {
            float: right !important;
            padding: unset !important;
        }
    </style>
    @*<title></title>*@
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Donation Management System", "AdminFront", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "AdminFront", "Home")</li>
                    <li>@Html.ActionLink("Users", "Admin_ManageUser", "Home")</li>
                    <li>@Html.ActionLink("BlockedUsers", "Admin_Blockuser", "Home")</li>
                    <li>@Html.ActionLink("Appointments", "Admin_appointment", "Home")</li>
                    <li>@Html.ActionLink("Requests", "Admin_request", "Home")</li>
                    <li>@Html.ActionLink("History", "Admin_ViewHistory", "Home")</li>
                    <li>@Html.ActionLink("Inventory", "Admin_Inventory", "Home")</li>
                    <li class="logout">@Html.ActionLink("Logout", "Logout", "Home")</li>
                    
                </ul>
            </div>
        </div>
    </div><div class="container body-content">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
